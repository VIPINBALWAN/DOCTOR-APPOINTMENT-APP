<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_green"
    android:orientation="vertical">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
    <ImageView
        android:id="@+id/r_img"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:background="#FFFFFF"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginRight="12dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/r_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="7dp"
            android:background="@color/white"
            android:text="Name"
            android:textColor="#7E57C2"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/r_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="3dp"
            android:background="#FFFFFF"
            android:text="Age"
            android:textColor="#000000"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/r_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="2dp"
            android:background="#FFFFFF"
            android:text="Workspace"
            android:textColor="#000000"
            android:textSize="12sp" />

        <!-- New TextView for displaying distance -->
        <TextView
            android:id="@+id/r_hospitalname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            android:text="HOSPITAL NAME : "
            android:textColor="#FF5722"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/r_hospitallocaion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            android:text="HOSPITAL LOCATION : "
            android:textColor="#FF5722"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:id="@+id/r_hospitalurl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="2dp"
        android:background="#FFFFFF"
        android:text="HOSPITAL LOCATION LINK : "
        android:textColor="#FF5722"
        android:textSize="12sp" />
</LinearLayout>
